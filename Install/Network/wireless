BASE_WLAN0_IP="192.168.0.5"
ROBOT_ID="%robotPart%"
GATEWAY="192.168.0.1"

depend() {
  need dbus
}

start() {
  ifconfig wlan0 up
  wpa_supplicant -iwlan0 -Dnl80211 -c/home/nao/Profiles/default -B
  sleep 1
   
ifconfig wlan0 "${BASE_WLAN0_IP}${ROBOT_ID}" netmask 255.255.255.0
#   ifconfig wlan0 "192.168.0.20" netmask 255.255.255.0

   route add -net default gw "${GATEWAY}"

	
  sysctl -w net.ipv6.conf.all.disable_ipv6=1
}

stop() {
  killall wpa_supplicant
  ifconfig wlan0 down
}

restart() {
  stop
  sleep 2
  start
}
